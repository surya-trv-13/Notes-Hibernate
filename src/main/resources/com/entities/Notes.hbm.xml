<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE hibernate-mapping PUBLIC 
    "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
    "http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">
    
   <hibernate-mapping package="com.entites">
   	<class name="Notes" table="notes">
   		<id name="id" column="notes_id">
   			<generator class="increment"></generator>
   		</id>
   		<property name="title" type="string">
   			<column name="note_title"></column>
   		</property>
   		<property name="content" type="string">
   			<column name="note_content"></column>
   		</property>
   		<property name="addedDate" type="java.util.Date">
   			<column name="note_date"></column>
   		</property>
   	</class>
   </hibernate-mapping>